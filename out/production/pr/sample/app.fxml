<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bp" prefHeight="1050.0" prefWidth="1680.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LordController">
   <left>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="530.0" style="-fx-background-color: #53917E;" BorderPane.alignment="CENTER">
         <children>
            <JFXButton id="btn-jx" onMouseClicked="#add" prefHeight="75.0" prefWidth="530.0" ripplerFill="WHITE" style="-fx-background-color: transparent;" stylesheets="@style.css" text="Add Goods" textFill="WHITE">
               <font>
                  <Font name="Avenir Book" size="34.0" />
               </font>
            </JFXButton>
            <JFXButton id="btn-jx" onMouseClicked="#resuply" prefHeight="75.0" prefWidth="530.0" stylesheets="@style.css" text="Resuply Goods" textFill="WHITE">
               <font>
                  <Font name="Avenir Book" size="34.0" />
               </font>
            </JFXButton>
            <JFXButton id="btn-jx" onMouseClicked="#remove" prefHeight="75.0" prefWidth="530.0" stylesheets="@style.css" text="Remove Goods" textFill="WHITE">
               <font>
                  <Font name="Avenir Book" size="34.0" />
               </font>
            </JFXButton>
            <JFXButton id="btn-jx" onMouseClicked="#stats" prefHeight="75.0" prefWidth="530.0" stylesheets="@style.css" text="Show Statistics" textFill="WHITE">
               <font>
                  <Font name="Avenir Book" size="34.0" />
               </font>
            </JFXButton>
            <JFXButton id="btn-jx" fx:id="showGoods" onMouseClicked="#goods" prefHeight="75.0" prefWidth="530.0" stylesheets="@style.css" text="Show Goods" textFill="WHITE">
               <font>
                  <Font name="Avenir Book" size="34.0" />
               </font>
            </JFXButton>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </left>
   <center>
      <AnchorPane fx:id="ap" prefHeight="1050.0" prefWidth="1150.0" style="-fx-background-color: #FCD0A1;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="goodsAdd" layoutX="475.0" layoutY="414.0" mnemonicParsing="false" onAction="#initialize" prefHeight="89.0" prefWidth="245.0" text="Add" />
            <TextField fx:id="goodName" layoutX="130.0" layoutY="142.0" prefHeight="70.0" prefWidth="350.0" promptText="Name">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <TextField fx:id="goodPrice" layoutX="540.0" layoutY="250.0" prefHeight="70.0" prefWidth="350.0" promptText="Price">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <TextField fx:id="goodModel" layoutX="540.0" layoutY="142.0" prefHeight="70.0" prefWidth="350.0" promptText="Model">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
            <TextField fx:id="goodCount" layoutX="130.0" layoutY="250.0" prefHeight="70.0" prefWidth="350.0" promptText="Count">
               <font>
                  <Font size="23.0" />
               </font>
            </TextField>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
